pipeline {
    agent {label 'CENTOSJAVA11'}
    parameters {
        choice(name: 'BRANCH', choices: ['LATEST_PROJECT_1.0', 'master'], description: 'branch_build')
        string(name: 'MAVEN_GOAL', defaultValue: 'package', description: 'maven_goal')
    }
    triggers {
        pollSCM('* * * * *')
        upstream(upstreamProjects: 'spring-petclinic-pipeline', threshold: hudson.model.Result.SUCCESS)

    }
    stages {
        stage('vcs') {
            steps {
                git branch: "${params.BRANCH}", url: 'https://github.com/krishna5683akp/game-of-life.git'

            }
        }
        stage('build') {
            steps {
                sh "mvn ${params.MAVEN_GOAL}"
            }
        }
        stage('archive test report') {
            steps {
                junit '**/surefire-reports/*xml'
            }
        }
        stage('archive artifacts') {
            steps {
                archive 'target/gameoflife-web/*.war'
            }
        }
    }

}